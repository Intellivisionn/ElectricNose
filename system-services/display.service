[Unit]
Description=Sensor Reader Service
After=network.target

[Service]
User=admin
WorkingDirectory=/home/admin/ElectricNose/DisplayController
ExecStart=/bin/bash /home/admin/ElectricNose/system-services/display_service.sh
Restart=always
RestartSec=5
StandardOutput=append:/var/log/display_service.log
StandardError=append:/var/log/display_service.log

[Install]
WantedBy=multi-user.target